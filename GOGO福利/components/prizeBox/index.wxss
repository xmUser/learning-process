/* components/prizeBox/index.wxss */

.container {
  width: 86vw;
  height: 100vw;
  background: rgba(255, 255, 255, 1);
  border-radius: 2vw;
  padding: 0 2vw;
  position: absolute;
  top: -5vw;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.title {
  width: 100%;
  height: 34vw;
  position: relative;
}

.title >.img {
  width: 36vw;
  height: 34vw;
  margin: 0 auto;
  position: absolute;
  top: -12vw;
  left: 25vw;
  z-index: 2;
}

.title >.img.back {
  z-index: 1;
  width: 40vw;
  height: 38vw;
  top: -14vw;
}

.content {
  text-align: center;
  font-family: PingFang SC;
  font-weight: 500;
  margin: 0 auto;
  position: relative;
  top: -12vw;
  overflow: hidden;
}

.content > .tips {
  font-size: 6vw;
  font-family: Lantinghei SC;
  font-weight: 800;
  color: rgba(237, 132, 54, 1);
  letter-spacing: 0.5vw;
}

.content > .btn {
  width: 65vw;
  height: 10vw;
  line-height: 10vw;
  font-size: 5vw;
  font-family: PingFang SC;
  font-weight: 600;
  letter-spacing: 5rpx;
  text-align: center;
  color: rgba(183, 50, 27, 1);
  background: linear-gradient(180deg, rgba(254, 236, 15, 1), rgba(240, 203, 1, 1));
  border: 2rpx solid rgba(253, 217, 15, 1);
  box-shadow: 0 0 4rpx rgba(217, 57, 34, 1);
  border-radius: 6vw;
  margin: 5vw auto;
  position: relative;
  top: -3vw;
}

.content > .btn.no-back {
  background: rgba(251, 225, 3, 0);
  border: 2rpx solid rgba(234, 136, 55, 1);
  box-shadow: none;
}

.content > .btn.back > .rtop {
  width: 12vw;
  height: 5vw;
  line-height: 5vw;
  font-size: 2.5vw;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  background: rgba(244, 146, 18, 1);
  border-radius: 17px 17px 17px 0px;
  position: absolute;
  top: -3vw;
  right: -2vw;
}

.content >.btn:active {
  box-shadow: 0 0 4px 0 rgba(217, 57, 34, 1);
}

.line {
  height: 2rpx;
  border-top: 2rpx dotted rgba(199, 199, 199, 1);
  position: relative;
  top: -16vw;
}

.ad {
  width: 84vw;
  background: rgba(230, 105, 50, 0.26);
  position: relative;
  top: -12vw;
  margin: 0 auto;
}
