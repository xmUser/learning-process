/* pages/shop/index.wxss */

.container {
  width: 100vw;
  height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
  display: block;
}

.header {
  width: 100vw;
  height: 24vw;
  color: rgba(255, 254, 254, 1);
  background-color: #ff7c2e;
  padding: 5vw 0 2vw 0;
}

.header > .img {
  width: 17vw;
  height: 17vw;
  float: left;
  margin-top: 2vw;
  margin-left: 9vw;
}

.header > .num {
  font-size: 10vw;
  font-family: PingFang SC;
  font-weight: 600;
  margin-left: 28vw;
}

.header > .text {
  font-size: 4vw;
  font-family: PingFang SC;
  font-weight: 600;
  margin-left: 28vw;
  letter-spacing: 0.5vw;
}

.list {
  width: 100vw;
}

.list > .item {
  width: 50vw;
  height: 50vw;
  padding: 2vw;
  font-size: 4vw;
  box-sizing: border-box;
  border: 1px solid rgba(203, 203, 203, 1);
  float: left;
  overflow-x: hidden;
}

.list>.item>.btn {
  width: 12vw;
  height: 7vw;
  line-height: 7vw;
  font-size: 3vw;
  font-family: PingFang SC;
  font-weight: 400;
  color: #fff;
  background: rgba(255, 88, 0, 1);
  border-radius: 4px;
  padding: 0;
  float: right;
}

.list>.item>.btn:active {
  background: rgba(255, 88, 0, 0.8);
}

.list>.item>.img-container {
  width: 50vw;
  margin-top: 3vw;
}

.list>.item>.img-container>.img {
  width: 46vw;
  height: 30vw;
}

.list > .no-content {
  text-align: center;
  font-size: 3vw;
  color: rgba(209, 209, 209, 1);
  padding: 2vw 0;
}
