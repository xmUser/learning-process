/* pages/prize/index.wxss */

.container {
  width: 100vw;
  height: 100vh;
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-color: #c91f00;
  overflow-x: hidden;
  overflow-y: auto;
  display: block;
}

.title {
  width: 100vw;
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: 500;
  letter-spacing: 4rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 25px;
  text-shadow: 0px 2px 4px rgba(236, 119, 76, 0.73);
  text-align: center;
  margin: 40rpx 0;
}

.box {
  width: 86vw;
  height: 132vw;
  min-height: 82vh;
  max-height: 86vh;
  background: rgba(255, 255, 255, 1);
  border: 4px solid rgba(231, 231, 231, 1);
  border-radius: 3vw;
  margin: 0 auto;
  padding: 2vw;
  overflow-y: auto;
}

.box> .item {
  height: 20vw;
  padding: 2vw 0;
  border-bottom: 2px solid rgba(209, 209, 209, 1);
}

.box> .item > .left {
  width: 18vw;
  height: 18vw;
  line-height: 18vw;
  text-align: center;
  float: left;
}

.box> .item > .left>.img {
  width: 16vw;
  height: 16vw;
  margin: 1vw;
}

.box > .item > .mid {
  width: 50vw;
  float: left;
}

.box > .item > .mid > .name {
  line-height: 12vw;
  font-size: 4vw;
  font-family: PingFang SC;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
}

.box > .item > .mid > .date {
  line-height: 5vw;
  font-size: 3vw;
  font-family: PingFang SC;
  font-weight: 600;
  color: rgba(102, 102, 102, 1);
}

.box > .item > .right {
  width: 18vw;
  height: 18vw;
  line-height: 18vw;
  text-align: center;
  color: rgba(51, 51, 51, 1);
  float: right;
}

.box > .item > .right > .btn {
  display: inline-block;
  width: 15vw;
  height: 7vw;
  line-height: 7vw;
  color: #FFFFFF;
  font-family: PingFang SC;
  font-weight: 300;
  background: rgba(255, 116, 54, 1);
  border-radius: 1vw;
}

.box > .item > .right > .btn:active {
  background-color: rgba(255, 116, 54, 0.8);
}

.box > .no-content {
  text-align: center;
  font-size: 3vw;
  color: rgba(209, 209, 209, 1);
  padding: 2vw 0;
}